@model ShoppingCartViewModel

@{
    ViewData["Title"] = "Shopping Cart";
}

@if (Model != null && Model.Courses.Count() > 0)
{
    <br />
    <div class="backgroundWhiteBorder">
        <div class="container">
            <div class="card">
                <div class="card-header bg-indigo text-light ml-0 row container">
                    <div class="col-6">
                        <i class="fa fa-shopping-cart"></i> &nbsp;
                        Shopping Cart
                    </div>
                    <div class="col-6 text-right">
                        <a asp-controller="Course" asp-action="Index" class="btn btn-outline-info btn-sm">Continue Shopping</a>
                    </div>
                </div>

                <div class="card-body">
                    @foreach (var course in Model.Courses)
                    {
                        <div class="row">
                            <div class="d-none d-lg-block col-lg-1 text-center py-2">
                                <a asp-area="" asp-controller="Course" asp-action="Details" asp-route-id="@course.Id">
                                    <img src="@course.ImageUrl" class="rounded" width="100%" />
                                </a>
                            </div>
                            <div class="col-12 text-sm-center col-lg-6 text-lg-left">
                                <a asp-area="" asp-controller="Course" asp-action="Details" asp-route-id="@course.Id">
                                    <h5><strong>@course.Name</strong></h5>
                                    <p><small>by @course.CreatorFullName</small></p>
                                </a>
                            </div>
                            <div class="col-12 text-sm-center col-lg-5 text-lg-right row">
                                <div class="col-4 text-md-right" style="padding-top:5px;">
                                    <h6><strong>$@course.Price<span class="text-muted"></span></strong></h6>
                                </div>
                                <div class="col-6 col-sm-4 col-lg-6">
                                    <div class="float-right mx-1">
                                        <a asp-action="plus" asp-route-cartId="@course.Id" class="btn btn-primary">
                                            <i class="fas fa-plus"></i>
                                        </a>
                                    </div>
                                    <div class="float-right mx-1">
                                        <a asp-controller="Course" asp-action="Details" asp-route-id="@course.Id" class="btn btn-primary btn-sm">
                                            <i class="fas fa-folder">
                                            </i>
                                            View
                                        </a>
                                        @*<a asp-action="minus" asp-route-cartId="@course.Id" class="btn btn-danger">
                                <i class="fas fa-minus"></i>
                                </a>*@
                                    </div>
                                </div>
                                <div class="col-2 col-sm-4 col-lg-2 text-right">
                                    <a asp-controller="ShoppingCart" asp-action="Delete" asp-route-id="@course.Id" class="btn btn-danger">
                                        <i class="fas fa-trash"></i>
                                    </a>
                                </div>
                            </div>
                        </div>
                        <hr />
                    }

                    <div class="row">
                        <div class="col-12 col-md-6 offset-md-6 col-lg-4 offset-lg-8 pr-4">
                            <ul class="list-group">
                                <li class="list-group-item d-flex justify-content-between bg-light">
                                    <span class="text-info"> Total (USD)</span>
                                    <strong class="text-info">$ <span id="txtOrderTotal">@Model.TotalPrice</span></strong>
                                </li>
                            </ul>
                        </div>
                    </div>

                    <div class="card-footer">
                        <div class="col-sm-12 col-lg-4 col-md-6 offset-lg-8 offset-md-6 ">
                            <a asp-controller="ShoppingCart" asp-action="DeleteAll" class="btn btn-danger form-control">Clear Cart</a>
                        </div>
                        <div class="col-sm-12 col-lg-4 col-md-6 offset-lg-8 offset-md-6 ">
                            <a asp-controller="ShoppingCart" asp-action="Summary" class="btn btn-success form-control">Summary</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
else
{
    <p class="col-6 text-right">There are no courses in the shopping cart. Why don`t you buy something</p>
    <div class="col-6 text-right">
        <a asp-controller="Course" asp-action="Index" class="btn btn-outline-info btn-sm">Go Shopping</a>
    </div>
}