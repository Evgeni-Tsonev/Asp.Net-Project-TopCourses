@model IEnumerable<LanguageViewModel>

@{
    ViewData["Title"] = "Languages";
}

<br />
<div class="row">
    <div class="col-6">
        <h2 class="text-primary">Languages List </h2>
    </div>
    <div class="col-6 text-right">
        <a class="btn btn-primary" asp-area="Admin" asp-controller="Language" asp-action="Add">
            <i class="fas fa-plus"></i>
            &nbsp; Add language
        </a>
    </div>
</div>

<br />
<div class="p-4 border rounded">
    <table id="tblData" class="table table-striped table-bordered" style="width:100%">
        <thead class="thead-dark">
            <tr class="table-info">
                <th>ID</th>
                <th>Language</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var language in Model)
            {
                <tr>
                    <td>@language.Id</td>
                    <td>@language.Title</td>
                    <td>
                        <a asp-area="Admin" asp-action="Edit" asp-controller="Language" asp-route-id="@language.Id" class="btn btn-block btn-outline-info btn-xs">Edit</a>
                        <form asp-area="Admin" asp-action="Delete" asp-controller="Language" method="post">
                            <input name="id" type="hidden" value="@language.Id" />
                            <button type="submit" class="btn btn-block btn-outline-danger btn-xs">Delete</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

