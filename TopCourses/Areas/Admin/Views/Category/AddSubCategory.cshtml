@model CategoryModel

<h2>Add SubCategory</h2>

<form asp-controller="Category" asp-action="AddSubCategory" method="post">
    @foreach (var category in (ICollection<CategoryModel>)ViewBag.mainCategories)
    {
        <div class="form-check">
            <input asp-for="ParentId" value="@category.Id" class="form-check-input" type="radio">
            <label asp-for="ParentId" class="form-check-label">
                @category.Title
            </label>
        </div>
    }

    <div class="form-group">
        <label asp-for="Title"></label>
        <input asp-for="Title" />
        <span asp-validation-for="Title" class="small text-danger"></span>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary">Add</button>
    </div>
</form>

<div class="form-group">
    <a asp-controller="Category" asp-action="Index">
        <input type="button" class="btn btn-primary" value='Cancel' />
    </a>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial.cshtml" />
}
